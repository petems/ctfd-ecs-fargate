{
  "name": "CTFd ECS Fargate Terraform",
  "build": {
    "dockerfile": "Dockerfile"
  },
  
  "features": {
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "hashicorp.terraform",
        "hashicorp.hcl",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "anthropic.claude-code"
      ],
      "settings": {
        "terraform.languageServer.enable": true,
        "terraform.languageServer.experimentalFeatures.validateOnSave": true,
        "terraform.format.enable": true,
        "terraform.format.formatOnSave": true,
        "files.associations": {
          "*.tf": "terraform",
          "*.tfvars": "terraform",
          "*.hcl": "terraform"
        }
      }
    }
  },

  "postCreateCommand": "terraform --version && docker --version",
  
  "remoteUser": "vscode",
  
  "mounts": [
    "source=${localWorkspaceFolder}/.terraform,target=/workspaces/ctfd-ecs-fargate/.terraform,type=bind,consistency=cached"
  ],

  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/ctfd-ecs-fargate,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/ctfd-ecs-fargate"
}
